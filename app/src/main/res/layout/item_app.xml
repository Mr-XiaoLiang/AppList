<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/itemBackgroundA">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appIconView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="24dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelView"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="24dp"
        android:text="@string/app_name"
        android:textColor="@color/titleOnBackground"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/packageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/appIconView"
        app:layout_constraintTop_toTopOf="@id/appIconView" />

    <TextView
        android:id="@+id/packageView"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/summaryOnBackground"
        app:layout_constraintBottom_toBottomOf="@id/appIconView"
        app:layout_constraintEnd_toEndOf="@id/labelView"
        app:layout_constraintStart_toStartOf="@id/labelView"
        app:layout_constraintTop_toBottomOf="@id/labelView" />

</androidx.constraintlayout.widget.ConstraintLayout>